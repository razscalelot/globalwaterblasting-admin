<script>
$(document).ready(function(){
    var maxFieldLimit = 10; //Input fields increment limitation
    var add_more_button = $('.add_button'); //Add button selector
    var Fieldwrapper = $('.input_field_wrapper'); //Input field wrapper
    var y = 1;
    var x = 1; //Initial field counter is 1
    $(add_more_button).on('click', function(){ //Once add button is clicked
        if(x < maxFieldLimit){ //Check maximum number of input fields
            x++; //Increment field counter
            $(Fieldwrapper).append(`<div class="mt-5 item${y}">
                        <div class="form-inline mt-5 first:mt-0">
                            <label class="form-label sm:w-20">Title</label>
                                <div class="flex items-center flex-1 xl:pr-20">
                                    <div class="input-group flex-1">
                                        <input name="ptitle" type="text" class="form-control" placeholder="Size">
                                    </div>
                                </div>
                        </div>
                        <div class="form-inline mt-5 items-start first:mt-0">
                            <label class="form-label mt-2 sm:w-20">Description</label>
                            <div class="flex-1">
                                <div class="xl:flex items-center mt-5 first:mt-0">
                                    <div class="input-group flex-1">
                                        <textarea id="validation-form-6" class="form-control" name="desc" placeholder="Type your description" minlength="10" required></textarea>
                                    </div>
                                    <div class="w-20 flex text-slate-500 mt-3 xl:mt-0">
                                        <a href="javascript:void(0);" class="ml-3 xl:ml-5 remove_button"> 
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" icon-name="trash-2" data-lucide="trash-2" class="lucide lucide-trash-2 w-4 h-4"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>`); // Add field html                    
            y++;
        }
    });
    $(Fieldwrapper).on('click', '.remove_button', function(){ //Once remove button is clicked
        $(`.item${y}`).remove(); //Remove field html
        x--; //Decrement field counter
        y--;
    });
});
</script>